% New commands

\newcommand{\textrmb}[1]{\textrm{\textbf{#1}}}

% Chapter Overview style
\newcommand{\chapteroverview}[2]{%
  \vspace{\baselineskip}%
  {\Huge #1}%
  \vspace{\baselineskip}\\ #2
\clearpage}

% Examples
\newcommand{\Example}[1]{%
  \par\vspace{1ex}%
  \textbf{Example:}%
  {\hspace{0.5 in}} {#1} {\par\vspace{1ex}}}

% Format
\newcommand{\Format}[1]{%
  \par\vspace{1ex}%
  \textbf{General Format:}%
  {\hspace{0.5 in}} {#1} {\par\vspace{1ex}}}


% New environments

