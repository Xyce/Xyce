% Xyce added stuff
%------------------------------------------------------------------------------

% % Tabularx environment changes
\renewcommand{\tabularxcolumn}[1]{>{\vspace{0.5em}}m{#1}}
\newcolumntype{Y}{>{\raggedright\arraybackslash}X}
\newcolumntype{Z}{>{\raggedright\arraybackslash}X}
\newcolumntype{W}{>{\centering\arraybackslash}X}

\newcommand{\XyceVersion}[1]{
  \newcommand{\XyceVersionVar}{#1}
}

\newcommand{\XyceDocName}[1]{
  \newcommand{\XyceDocNameVar}{#1}
}

